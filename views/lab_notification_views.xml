<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_manual_review_digest_config_list" model="ir.ui.view">
        <field name="name">lab.manual.review.digest.config.list</field>
        <field name="model">lab.manual.review.digest.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
                <field name="fallback_email"/>
            </list>
        </field>
    </record>

    <record id="view_lab_manual_review_digest_config_form" model="ir.ui.view">
        <field name="name">lab.manual.review.digest.config.form</field>
        <field name="model">lab.manual.review.digest.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="fallback_email"/>
                    </group>
                    <group>
                        <field name="subject_template"/>
                        <field name="body_template"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_manual_review_digest_config" model="ir.actions.act_window">
        <field name="name">Digest Notification Config</field>
        <field name="res_model">lab.manual.review.digest.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_lab_manual_review_digest_config"
        name="Digest Notification Config"
        parent="menu_laboratory_config"
        action="action_lab_manual_review_digest_config"
        sequence="45"
    />
</odoo>
