<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_import_job_list" model="ir.ui.view">
        <field name="name">lab.import.job.list</field>
        <field name="model">lab.import.job</field>
        <field name="arch" type="xml">
            <list decoration-danger="status == 'failed'" decoration-success="status == 'done'">
                <field name="name"/>
                <field name="import_type"/>
                <field name="file_name"/>
                <field name="started_at"/>
                <field name="finished_at"/>
                <field name="total_rows"/>
                <field name="success_rows"/>
                <field name="failed_rows"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_lab_import_job_form" model="ir.ui.view">
        <field name="name">lab.import.job.form</field>
        <field name="model">lab.import.job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="import_type" readonly="1"/>
                            <field name="file_name" readonly="1"/>
                            <field name="status" readonly="1"/>
                        </group>
                        <group>
                            <field name="started_at" readonly="1"/>
                            <field name="finished_at" readonly="1"/>
                            <field name="total_rows" readonly="1"/>
                            <field name="success_rows" readonly="1"/>
                            <field name="failed_rows" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" readonly="1"/>
                    </group>
                    <field name="line_ids" readonly="1">
                        <list decoration-danger="status == 'failed'" decoration-success="status == 'success'">
                            <field name="row_no"/>
                            <field name="accession"/>
                            <field name="instrument_code"/>
                            <field name="test_code"/>
                            <field name="service_code"/>
                            <field name="result_value"/>
                            <field name="status"/>
                            <field name="message"/>
                        </list>
                    </field>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_lab_import_job" model="ir.actions.act_window">
        <field name="name">Import Jobs</field>
        <field name="res_model">lab.import.job</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_lab_import_job" name="Import Jobs" parent="menu_laboratory_operations" action="action_lab_import_job" sequence="27"/>
</odoo>
