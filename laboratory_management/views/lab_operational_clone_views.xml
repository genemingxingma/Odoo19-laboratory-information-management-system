<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_department_queue_rule_list" model="ir.ui.view">
        <field name="name">lab.department.queue.rule.list</field>
        <field name="model">lab.department.queue.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="department"/>
                <field name="role_type"/>
                <field name="priority"/>
                <field name="source_model"/>
                <field name="source_state"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_lab_department_queue_rule_form" model="ir.ui.view">
        <field name="name">lab.department.queue.rule.form</field>
        <field name="model">lab.department.queue.rule</field>
        <field name="arch" type="xml">
            <form string="Department Queue Rule">
                <sheet>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="name"/>
                            <field name="department"/>
                            <field name="role_type"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="source_model"/>
                            <field name="source_state"/>
                            <field name="include_overdue_only"/>
                            <field name="include_critical_only"/>
                            <field name="include_manual_review_only"/>
                            <field name="include_failed_only"/>
                            <field name="action_name"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="domain_json" placeholder='[["priority","=","stat"]]'/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_department_queue_rule" model="ir.actions.act_window">
        <field name="name">Department Queue Rules</field>
        <field name="res_model">lab.department.queue.rule</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_lab_department_workbench_wizard_form" model="ir.ui.view">
        <field name="name">lab.department.workbench.wizard.form</field>
        <field name="model">lab.department.workbench.wizard</field>
        <field name="arch" type="xml">
            <form string="Department Workbench" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="department"/>
                            <field name="role_type"/>
                        </group>
                        <group>
                            <button name="action_refresh" string="Refresh" type="object" class="btn-primary"/>
                            <button name="action_log_rule_runs" string="Snapshot Rule Runs" type="object" class="btn-secondary"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="queue_total" readonly="1"/>
                            <button name="action_open_queue" string="Open" type="object"/>
                        </group>
                        <group>
                            <field name="overdue_total" readonly="1"/>
                            <button name="action_open_overdue" string="Open" type="object"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="critical_total" readonly="1"/>
                            <button name="action_open_critical" string="Open" type="object"/>
                        </group>
                        <group>
                            <field name="manual_review_total" readonly="1"/>
                            <button name="action_open_manual_review" string="Open" type="object"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="failed_interface_total" readonly="1"/>
                            <button name="action_open_failed_interface" string="Open" type="object"/>
                        </group>
                        <group>
                            <field name="ncr_open_total" readonly="1"/>
                            <button name="action_open_ncr" string="Open" type="object"/>
                        </group>
                    </group>
                    <group>
                        <field name="rule_result_json" readonly="1" widget="text"/>
                    </group>
                </sheet>
                <footer>
                    <button special="cancel" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lab_department_workbench_wizard" model="ir.actions.act_window">
        <field name="name">Department Workbench</field>
        <field name="res_model">lab.department.workbench.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_lab_department_workbench_rule_run_list" model="ir.ui.view">
        <field name="name">lab.department.workbench.rule.run.list</field>
        <field name="model">lab.department.workbench.rule.run</field>
        <field name="arch" type="xml">
            <list>
                <field name="run_at"/>
                <field name="wizard_department"/>
                <field name="wizard_role_type"/>
                <field name="rule_id"/>
                <field name="result_count"/>
            </list>
        </field>
    </record>

    <record id="action_lab_department_workbench_rule_run" model="ir.actions.act_window">
        <field name="name">Workbench Rule Runs</field>
        <field name="res_model">lab.department.workbench.rule.run</field>
        <field name="view_mode">list</field>
    </record>

    <record id="view_lab_hl7_template_list" model="ir.ui.view">
        <field name="name">lab.hl7.template.list</field>
        <field name="model">lab.hl7.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="message_type"/>
                <field name="version"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_lab_hl7_template_form" model="ir.ui.view">
        <field name="name">lab.hl7.template.form</field>
        <field name="model">lab.hl7.template</field>
        <field name="arch" type="xml">
            <form string="HL7 Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="message_type"/>
                            <field name="version"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Segments">
                            <field name="segment_ids">
                                <list editable="bottom">
                                    <field name="sequence"/>
                                    <field name="segment_name"/>
                                    <field name="field_template"/>
                                    <field name="repeatable"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_hl7_template" model="ir.actions.act_window">
        <field name="name">HL7 Templates</field>
        <field name="res_model">lab.hl7.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_lab_qc_trend_profile_list" model="ir.ui.view">
        <field name="name">lab.qc.trend.profile.list</field>
        <field name="model">lab.qc.trend.profile</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="window_size"/>
                <field name="warning_sigma"/>
                <field name="reject_sigma"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_lab_qc_trend_profile_form" model="ir.ui.view">
        <field name="name">lab.qc.trend.profile.form</field>
        <field name="model">lab.qc.trend.profile</field>
        <field name="arch" type="xml">
            <form string="QC Trend Profile">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="window_size"/>
                            <field name="warning_sigma"/>
                            <field name="reject_sigma"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="service_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_qc_trend_profile" model="ir.actions.act_window">
        <field name="name">QC Trend Profiles</field>
        <field name="res_model">lab.qc.trend.profile</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_lab_qc_trend_snapshot_list" model="ir.ui.view">
        <field name="name">lab.qc.trend.snapshot.list</field>
        <field name="model">lab.qc.trend.snapshot</field>
        <field name="arch" type="xml">
            <list decoration-danger="reject_count &gt; 0" decoration-warning="warning_count &gt; 0">
                <field name="name"/>
                <field name="profile_id"/>
                <field name="captured_at"/>
                <field name="total_service"/>
                <field name="warning_count"/>
                <field name="reject_count"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_lab_qc_trend_snapshot_form" model="ir.ui.view">
        <field name="name">lab.qc.trend.snapshot.form</field>
        <field name="model">lab.qc.trend.snapshot</field>
        <field name="arch" type="xml">
            <form string="QC Trend Snapshot">
                <header>
                    <button name="action_capture" string="Capture" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_publish" string="Publish" type="object" invisible="state != 'captured'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,captured,published"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="profile_id"/>
                            <field name="captured_at"/>
                        </group>
                        <group>
                            <field name="total_service" readonly="1"/>
                            <field name="warning_count" readonly="1"/>
                            <field name="reject_count" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="summary"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list>
                                    <field name="service_id"/>
                                    <field name="sample_size"/>
                                    <field name="latest_value"/>
                                    <field name="mean_value"/>
                                    <field name="std_value"/>
                                    <field name="sigma_value"/>
                                    <field name="status"/>
                                    <field name="comment"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_lab_qc_trend_snapshot" model="ir.actions.act_window">
        <field name="name">QC Trend Snapshots</field>
        <field name="res_model">lab.qc.trend.snapshot</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_lab_compliance_audit_report_list" model="ir.ui.view">
        <field name="name">lab.compliance.audit.report.list</field>
        <field name="model">lab.compliance.audit.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="department"/>
                <field name="generated_at"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_lab_compliance_audit_report_form" model="ir.ui.view">
        <field name="name">lab.compliance.audit.report.form</field>
        <field name="model">lab.compliance.audit.report</field>
        <field name="arch" type="xml">
            <form string="Compliance Audit Report">
                <header>
                    <button name="action_generate" string="Generate" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" invisible="state != 'generated'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="department"/>
                        </group>
                        <group>
                            <field name="generated_at" readonly="1"/>
                            <field name="approved_at" readonly="1"/>
                            <field name="approved_by_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="conclusion"/>
                    </group>
                    <notebook>
                        <page string="Sections">
                            <field name="line_ids" readonly="1">
                                <list decoration-danger="risk_level == 'high'" decoration-warning="risk_level == 'medium'" decoration-success="risk_level == 'low'">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="metric_value"/>
                                    <field name="target_value"/>
                                    <field name="unit"/>
                                    <field name="risk_level"/>
                                    <field name="is_pass"/>
                                    <field name="detail"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_lab_compliance_audit_report" model="ir.actions.act_window">
        <field name="name">Compliance Audit Reports</field>
        <field name="res_model">lab.compliance.audit.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_lab_interface_analytics_report_list" model="ir.ui.view">
        <field name="name">lab.interface.analytics.report.list</field>
        <field name="model">lab.interface.analytics.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="endpoint_id"/>
                <field name="total_jobs"/>
                <field name="done_jobs"/>
                <field name="failed_jobs"/>
                <field name="dead_letter_jobs"/>
                <field name="success_rate" widget="percentage"/>
            </list>
        </field>
    </record>

    <record id="view_lab_interface_analytics_report_form" model="ir.ui.view">
        <field name="name">lab.interface.analytics.report.form</field>
        <field name="model">lab.interface.analytics.report</field>
        <field name="arch" type="xml">
            <form string="Interface Analytics Report">
                <header>
                    <button name="action_generate" string="Generate" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="endpoint_id"/>
                        </group>
                        <group>
                            <field name="total_jobs" readonly="1"/>
                            <field name="done_jobs" readonly="1"/>
                            <field name="failed_jobs" readonly="1"/>
                            <field name="dead_letter_jobs" readonly="1"/>
                            <field name="success_rate" widget="percentage" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="inbound_jobs" readonly="1"/>
                        <field name="outbound_jobs" readonly="1"/>
                        <field name="unique_external_uid" readonly="1"/>
                    </group>
                    <group>
                        <field name="report_json" readonly="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_lab_interface_analytics_report" model="ir.actions.act_window">
        <field name="name">Interface Analytics Reports</field>
        <field name="res_model">lab.interface.analytics.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_lab_interface_endpoint_form_operational_inherit" model="ir.ui.view">
        <field name="name">lab.interface.endpoint.form.operational.inherit</field>
        <field name="model">lab.interface.endpoint</field>
        <field name="inherit_id" ref="laboratory_management.view_lab_interface_endpoint_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inbound_mapping_profile_id']" position="after">
                <field name="hl7_order_template_id" invisible="protocol != 'hl7v2'"/>
                <field name="hl7_result_template_id" invisible="protocol != 'hl7v2'"/>
            </xpath>
        </field>
    </record>

    <record id="view_lab_service_form_operational_inherit" model="ir.ui.view">
        <field name="name">lab.service.form.operational.inherit</field>
        <field name="model">lab.service</field>
        <field name="inherit_id" ref="laboratory_management.view_lab_service_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sop_id']" position="after">
                <field name="queue_rule_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_lab_department_workbench" name="Department Workbench" parent="menu_laboratory_operations" action="action_lab_department_workbench_wizard" sequence="2"/>
    <menuitem id="menu_lab_workbench_rule_runs" name="Workbench Rule Runs" parent="menu_laboratory_operations" action="action_lab_department_workbench_rule_run" sequence="3"/>

    <menuitem id="menu_lab_department_queue_rule" name="Department Queue Rules" parent="menu_laboratory_config" action="action_lab_department_queue_rule" sequence="23"/>
    <menuitem id="menu_lab_hl7_template" name="HL7 Templates" parent="menu_laboratory_config" action="action_lab_hl7_template" sequence="24"/>

    <menuitem id="menu_lab_qc_trend_profile" name="QC Trend Profiles" parent="menu_laboratory_quality" action="action_lab_qc_trend_profile" sequence="37"/>
    <menuitem id="menu_lab_qc_trend_snapshot" name="QC Trend Snapshots" parent="menu_laboratory_quality" action="action_lab_qc_trend_snapshot" sequence="38"/>
    <menuitem id="menu_lab_compliance_audit_report" name="Compliance Audit Reports" parent="menu_laboratory_quality" action="action_lab_compliance_audit_report" sequence="39"/>

    <menuitem id="menu_lab_interface_analytics_report" name="Interface Analytics" parent="menu_laboratory_quality" action="action_lab_interface_analytics_report" sequence="40"/>
</odoo>
