<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_custody_batch_add_samples_wizard_form" model="ir.ui.view">
        <field name="name">lab.custody.batch.add.samples.wizard.form</field>
        <field name="model">lab.custody.batch.add.samples.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Samples to Custody Batch">
                <sheet>
                    <group>
                        <field name="batch_id"/>
                        <field name="sample_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="use_batch_to_user"/>
                    </group>
                    <group invisible="use_batch_to_user">
                        <field name="to_user_id"/>
                        <field name="to_location"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_apply" type="object" string="Apply" class="btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lab_custody_batch_add_samples_wizard" model="ir.actions.act_window">
        <field name="name">Add Samples to Custody Batch</field>
        <field name="res_model">lab.custody.batch.add.samples.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
