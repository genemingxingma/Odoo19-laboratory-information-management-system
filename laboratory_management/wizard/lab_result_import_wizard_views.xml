<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_result_import_wizard_form" model="ir.ui.view">
        <field name="name">lab.result.import.wizard.form</field>
        <field name="model">lab.result.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Lab Results (CSV)">
                <sheet>
                    <group>
                        <field name="file_data" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                        <field name="delimiter"/>
                        <field name="auto_mark_done"/>
                    </group>
                    <div class="o_form_label">CSV Columns: accession, service_code, result, remark(optional)</div>
                </sheet>
                <footer>
                    <button name="action_import" type="object" string="Import" class="btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lab_result_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Results</field>
        <field name="res_model">lab.result.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_lab_result_import" name="Import Results" parent="menu_laboratory_operations" action="action_lab_result_import_wizard" sequence="25"/>
</odoo>
