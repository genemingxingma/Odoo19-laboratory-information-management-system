<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lab_sample_transfer_custody_wizard_form" model="ir.ui.view">
        <field name="name">lab.sample.transfer.custody.wizard.form</field>
        <field name="model">lab.sample.transfer.custody.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Custody">
                <sheet>
                    <group>
                        <field name="sample_id"/>
                        <field name="from_user_id"/>
                        <field name="to_user_id"/>
                        <field name="location"/>
                        <field name="note"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_transfer" type="object" string="Transfer" class="btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
